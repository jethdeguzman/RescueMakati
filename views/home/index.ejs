    <script>
        jQuery(function($){
            var mapHeight = $("#map-wrapper").height();
            $("#map-canvas").css({
                height : mapHeight
            });
            $(window).resize(function(){
                var mapHeight = $("#map-wrapper").height();
                $("#map-canvas").css({
                    height : mapHeight
                });
                initialize();
            });

            $.ajax({
                url : "/request?status=new",
                type : "GET",
                dataType: "JSON",
                success : function(data){
                    var data = data.data;
                    for (var key in data){
                       $(".side-bar-alert").append(displayAlert(data[key]));
                    }
                }
            });

            socket.on('alert', function(res){
                $.playSound('/sound/alert');
                // var datetime = res.datetime;
                // var res = JSON.parse(res.data);
                // console.log(res);
                $(".side-bar-alert").prepend(displayAlert(res));
            });

        });
    
    function displayAlert(data){
        
        var request;
        switch(data.request){
            case "Ambulance": 
               request = '<strong class="color theme text bold" style="font-size:25px;"><span class="icon ambulance "></span> Ambulance</strong>';
            break;

            case "Police":
                request = '<strong class="color theme text bold" style="font-size:25px;"><span class="icon fighter-jet"></span> Police</strong>';
            break;

            case "Fire Truck":
               request = '<strong class="color theme text bold" style="font-size:25px;"><span class="icon fire"></span> Fire truck</strong>';
            break;

        }
        html = '<li>'+request+'<br><small>Status: <span>New</span></small><br><small class="color white text normal" style="text-indent:10px;"><span class="icon info-sign"></span>'+ data.name+', '+data.age+'</small><br><small class="color white text normal" style="text-indent:10px;"><span class="icon phone"></span> '+ data.mobile+'</small><br><small class="color white text normal" style="text-indent:10px;"><span class="icon home"></span>'+ data.address+'</small><br><small class="color white text normal" style="text-indent:10px;"><span class="icon calendar"></span> '+data.date+' '+ data.time +' </small><br><div data-tuktuk="buttons"><button class="alert tiny" style="margin-top:20px;"> Decline</button><button class="tiny success" style="margin-top:20px;"> Respond</button><button class="secondary tiny" style="margin-top:20px;">View</button></div><hr></li>';
        return html;
    }
